<p id="notice"><%= notice %></p>

<h1>Whiskeys</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Rate taste</th>
      <th>Rate color</th>
      <th>Rate smokey</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @whiskeys.each do |whiskey| %>
      <tr>
        <td><%= whiskey.user_id %></td>
        <td><%= whiskey.name %></td>
        <td><%= whiskey.description %></td>
        <td><%= whiskey.rate_taste %></td>
        <td><%= whiskey.rate_color %></td>
        <td><%= whiskey.rate_smokey %></td>
        <td><%= link_to 'Show', whiskey %></td>
        <td><%= link_to 'Edit', edit_whiskey_path(whiskey) %></td>
        <td><%= link_to 'Destroy', whiskey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

